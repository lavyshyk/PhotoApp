<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:background="@drawable/background_item_layout"
        android:elevation="@dimen/_8dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/text_field"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="@dimen/_12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mIBAddImage">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/mETNameChildFolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:background="#EDF3F4"
                    android:clickable="true"
                    android:cursorVisible="true"
                    android:focusable="true"
                    android:visibility="visible"
                    android:fontFamily="@font/ubuntu"
                    android:inputType="text"
                    android:paddingTop="@dimen/_10dp"
                    android:singleLine="true"
                    android:text="   "
                    android:textColor="#869495"
                    android:textSize="@dimen/_18sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mTVNameChildFolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:background="#EDF3F4"
                    android:focusable="true"
                    android:fontFamily="@font/ubuntu"
                    android:paddingTop="@dimen/_10dp"
                    android:textColor="#869495"
                    android:textSize="@dimen/_18sp" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/mIBAddImage"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:src="@drawable/black_add"
                android:theme="@style/Theme.AppCompat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_field"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <GridView
            android:id="@+id/mGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_20dp"
            android:layout_marginVertical="@dimen/_10dp"
            android:horizontalSpacing="@dimen/_5dp"
            android:isScrollContainer="true"
            android:numColumns="3"
            android:verticalSpacing="@dimen/_5dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>

